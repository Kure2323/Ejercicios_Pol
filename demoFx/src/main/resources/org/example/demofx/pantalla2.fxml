<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="369.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demofx.Pantalla2Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TextField fx:id="nombreTextField" promptText="Introduce un nombre..." />
    <TextField fx:id="precioTextField" promptText="Introduce el precio..." />
   <TableView prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn prefWidth="75.0" text="Nombre" fx:id="nombreTable"/>
       <TableColumn prefWidth="75.0" text="Precio" fx:id="precioTable"/>
     </columns>
   </TableView>

    <Button mnemonicParsing="false" onAction="#guardarBocadillos" text="Guardar" />

    <Button fx:id="pantalla2" onAction="#irAPantallaAnterior" text="Ir a pantalla 2" />
</VBox>
